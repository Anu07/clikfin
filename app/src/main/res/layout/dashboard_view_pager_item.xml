<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/scrollingView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/input_field_margin">

            <TextView
                android:id="@+id/scrolling_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="Instant Gold Loan"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/scrolling_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="DroorStep/No cibil/No salary slips"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <ImageView
            android:id="@+id/scrolling_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/scrollView"
            android:layout_weight="0.35"
            android:src="@drawable/scrolling_img1"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
