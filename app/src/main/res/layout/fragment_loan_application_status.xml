<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgApplicationStatus"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/underReviewTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Under Review"
        android:visibility="gone"
        android:padding="@dimen/input_field_margin"
        android:textColor="@color/darkBlueBg"
        android:textSize="@dimen/medium_text" />

    <LinearLayout android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/general_padding_margin"
        android:layout_marginRight="@dimen/general_padding_margin"
        android:layout_marginLeft="@dimen/general_padding_margin"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLoanStatusHeader"
            android:layout_marginTop="@dimen/input_field_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Congratulations!"
            android:textSize="@dimen/medium_text"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/darkBlueBg"/>

        <TextView
            android:id="@+id/tvLoanApplicationStatusDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Loan Approved"
            android:padding="@dimen/input_field_margin"
            android:textColor="@color/darkBlueBg"
            android:textSize="@dimen/small_text" />
    </LinearLayout>

</LinearLayout>