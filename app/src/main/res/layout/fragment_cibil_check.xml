<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_bg"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/darkBlueBg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_clickfin_splash" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topLayout"
        android:layout_marginTop="-80dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_cibil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_upcoming" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_cibil"
                android:gravity="center"
                android:padding="@dimen/input_field_padding"
                android:text="Upcoming"
                android:textColor="@color/splash_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>